<header>
    <div class="header-container">
        <div class="logo-title">
            <img src="{{ asset('build/img/restaurant-logo.png') }}" alt="Logo Restaurant" class="logo">
            <h1>BOOKING RESTAURANT</h1>
        </div>
        <!-- Menu Burger -->
        <div class="burger-menu" onclick="toggleMenu()">
            ☰
        </div>

        <nav class="nav-links-container">
            <ul class="nav-links">
                <li><a href="{{ path('app_home') }}">Accueil</a></li>
                <li><a href="{{ path('app_about') }}">À propos</a></li>
                <li><a href="{{ path('app_contact') }}">Contact</a></li>

                {% if app.user %}
                    <li class="dropdown">
                        <a href="#" class="dropbtn">Bienvenue, {{ app.user.nom }}</a>
                        <div class="dropdown-content">
                            <a href="{{ path('app_profile') }}">Profil</a>
                            <a href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                    </li>
                {% else %}
                    <li><a href="{{ path('app_login') }}">Se connecter</a></li>
                    <li><a href="{{ path('app_register') }}">S'inscrire</a></li>
                {% endif %}
            </ul>
        </nav>
    </div>
</header>
<script>
// JavaScript to toggle the menu on mobile view
function toggleMenu() {
    document.querySelector(".nav-links-container").classList.toggle("active");
}
</script>